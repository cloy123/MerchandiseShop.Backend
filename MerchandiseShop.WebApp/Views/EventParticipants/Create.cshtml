@model MerchandiseShop.WebApp.Models.EventParticipantDto

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />
            <input type="hidden" asp-for="IsVisit"/>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EventRoleId" class="control-label"></label>
                <select asp-for="EventRoleId" class="form-control" asp-items="ViewBag.EventRoleId"></select>
            </div>

            <div class="form-group">
                <input type="submit" style="margin-top:2%" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-eventId="@Model.EventId">Назад</a>
</div>