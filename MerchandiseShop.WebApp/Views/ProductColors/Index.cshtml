@model MerchandiseShop.Application.ProductColors.Queries.GetProductColorList.ProductColorListVm

@{
    ViewData["Title"] = "Index";
}


<h1>Цвета</h1>

<p>
    <a asp-action="Create">Добавить цвет</a>
</p>
<div>
    <a asp-action="Index" asp-controller="Products">Назад</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Значение
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductColors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <span style="color:@item.Value">
                        @Html.DisplayFor(modelItem => item.Value)
                    </span>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>